<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmpe277.activitylifecycle.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Activity A"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/closeButton"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/dialogButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/red_buttom"
        android:text="Close App"
        android:textColor="@color/green" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/activityAButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/sjsu" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_above="@+id/closeButton"
        android:layout_alignRight="@+id/dialogButton"
        android:layout_marginBottom="24dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/dialogButton"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activityAButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@drawable/red_buttom"
        android:text="Dialog"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/activityAButton"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_centerVertical="true"
        android:background="@drawable/red_buttom"
        android:text="Start Activity B"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/closeButton"
        android:layout_below="@+id/dialogButton"
        android:layout_marginTop="22dp"
        android:text="Thread Count"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="23dp"
        android:text="000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>